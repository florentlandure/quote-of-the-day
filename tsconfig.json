{
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "alwaysStrict": false,
    "moduleResolution": "node",
    "types": ["cucumber", "chai", "mocha", "node"],
    "target": "ES6",
    "baseUrl": "./src",
    "paths": {
      "@domain/*": ["domain/*"],
      "@adapters": ["adapters"],
      "@usecases": ["usecases"],
      "@factories": ["factories"],
      "@app/*": ["app/*"],
      "@test/*": ["../tests/*"]
    },
    "outDir": "./build",
    "lib": ["ES2018"]
  },
  "exclude": ["node_modules"]
}
